### Настройки сервера
AddDefaultCharset UTF-8
Options -Indexes -MultiViews +FollowSymLinks
ServerSignature Off

### Запрет прямого доступа к страницам ошибок (но разрешаем через ErrorDocument)
<IfModule mod_rewrite.c>
  RewriteEngine On
  # Проверяем, что это не внутреннее перенаправление Apache
  RewriteCond %{ENV:REDIRECT_STATUS} ^$
  # Запрещаем прямой доступ к страницам ошибок
  RewriteRule ^\.system-pages/(400|401|403|404|500|502|offline)/index\.html$ - [F,L]
</IfModule>

### Основные правила перезаписи URL
<IfModule mod_rewrite.c>
  RewriteEngine On

  ### Перенаправление на HTTPS + удаление www
  RewriteCond %{HTTPS} off [OR]
  RewriteCond %{HTTP_HOST} ^www\. [NC]
  RewriteRule ^ https://170100.ru%{REQUEST_URI} [L,R=301,NE]

  ### Удаление index.html из URL
  RewriteCond %{THE_REQUEST} \s/index\.html [NC]
  RewriteRule ^(.*?)index\.html$ /$1 [L,R=301,NC]

  ### Запрет доступа к index.html напрямую
  RewriteCond %{THE_REQUEST} \s(.*?)/index\.html [NC]
  RewriteRule ^(.*?)/index\.html$ /$1 [L,R=301,NC]

  ### Обработка множественных слешей
  RewriteCond %{THE_REQUEST} ^(?:GET|POST)\ //+([^\ ]*)
  RewriteRule .* https://%{HTTP_HOST}/%1 [R=301,L]
  RewriteCond %{REQUEST_URI} ^(.*)//(.*)$
  RewriteRule . %1/%2 [R,L]

  ### Удаление пустых query-параметров
  RewriteCond %{THE_REQUEST} ^[^\s]+\s+[^?]*?\?
  RewriteCond %{QUERY_STRING} ^$
  RewriteRule .? %{REQUEST_URI}? [R=301,L]

  ### Добавление слеша в конце URL для директорий
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_URI} !(\.\w+$|/|offline/index\.html$)
  RewriteRule [^/]$ %{REQUEST_URI}/ [R=301,L]
</IfModule>

